<view class="avatar-container" style="width: {{size}}rpx; height: {{size}}rpx; background-color: {{backgroundColor}};">
  <block a:if="{{imageUrl}}">
    <image class="avatar-image" src="{{imageUrl}}" mode="aspectFill" />
  </block>
  <block a:else>
    <text class="avatar-text" style="font-size: {{textSize}}rpx;">{{initials}}</text>
  </block>
</view>
